datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  email    String?
  avatar   String?
  Room     Room[]
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  point       Int
}

model Room {
  id          Int    @id @default(autoincrement())
  name        String
  host_id     Int
  max_players Int
  status      Status
  host        User   @relation(fields: [host_id], references: [id])
}

enum Status {
  waiting
  playing
  finished
}
