datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  password   String
  email      String?
  avatar     String?
  RoomPlayer RoomPlayer?
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  point       Int
}

enum RoomStatus {
  waiting
  playing
  finished
}

model Room {
  id          Int          @id @default(autoincrement())
  name        String
  max_players Int
  status      RoomStatus   @default(waiting)
  players     RoomPlayer[]
}

model RoomPlayer {
  id      Int     @id @default(autoincrement())
  is_host Boolean @default(false)
  room_id Int
  user_id Int?    @unique
  user    User?   @relation(fields: [user_id], references: [id])
  room    Room    @relation(fields: [room_id], references: [id])
}
